# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.Application.index

# THE ETUDIANTS LIST
GET     /etudiants                   controllers.Etudiants.list

# NEW ETUDIANT, AND SAVE (NEW OR EDITED) ETUDIANT
POST    /etudiants                  controllers.Etudiants.save
GET     /etudiants/new              controllers.Etudiants.newEtudiant

# EDIT ETUDIANT
GET     /etudiants/edit             controllers.Etudiants.editEtudiant(id: Long)
POST    /etudiants/update           controllers.Etudiants.update(id: Long)

# REMOVE ETUDIANT
POST    /etudiants/remove           controllers.Etudiants.remove(id: Long)

# THE ETUDIANT DETAILS
GET     /etudiants/:id              controllers.Etudiants.show(id: Long)

# BARCODE URL
GET     /barcode/:id               controllers.Barcodes.barcode(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
